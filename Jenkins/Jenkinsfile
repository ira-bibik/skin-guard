
pipeline {
  agent any
  options {
  buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
  }
  stages {
    stage('Build static') {
      steps{
        dir ('client') {
          sh 'docker build -t front:latest . '
        }
      }
    }
    stage('Build backend') {
      steps{
        dir ('server') {
          sh 'docker build -t back:latest .'  
        }
      }
    }
    stage('Deploy to stage') {
      steps {
        dir ('docker') {
          sh 'docker compose up '
        }
      }
    }  
  }
}


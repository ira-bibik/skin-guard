
pipeline {
  agent any
  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
    disableConcurrentBuilds()
  }
  stages {
    stage('Test') {
      steps {
        sh 'echo "test is seccesful"'
      }
    }
    stage('Build web') {
      steps{
        dir ('client') {
          sh 'docker build -t front:01 . '
          sh 'docker run --rm --env-file /opt/jenkins/client_env -v ./build:/build  front:01 '
          sh 'docker rmi front:01'
        }
      }
    }
    stage('Build backend') {
      steps{
        dir ('server') {
          sh 'docker build -t back:01 . '  
          sh 'docker run   --env-file /opt/jenkins/server_env  back:01 '
          //sh 'docker rmi back:01'
        }
      }
    }
/*
    stage('Deploy to stage') {
      steps {
        dir ('docker') {
          sh 'docker compose up -d'
        }
      }
    } 
    */
  }
}



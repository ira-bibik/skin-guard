
pipeline {
  agent any
  options {
  buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
  }
  stages {
    stage('Test') {
      steps {
        sh 'echo "test is seccesful"'
      }
    }
    stage('Build static') {
      steps{
        dir ('client') {
          sh 'docker build -t front:latest . '
          sh 'docker run --rm --name static --env-file /opt/jenkins/client_env -v ./build:/build -d front:latest '
        }
      }
    }
    stage('Build backend') {
      steps{
        dir ('server') {
          sh 'docker build -t back:latest .'  
          sh 'docker run --rm --name back --env-file /opt/jenkins/server_env -v ./dist:/dist -d back:latest '
        }
      }
    }
/*
    stage('Deploy to stage') {
      steps {
        dir ('docker') {
          sh 'docker compose up -d'
        }
      }
    } 
    */
  }
}


